{{ 'section-rich-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #shopify-section-{{ section.id }} {
    {% if section.settings.background_image != blank %}
      background-image: url({{ section.settings.background_image | img_url: 'master' }});
      background-size: {% if section.settings.backgorund_image_repeat %}contain{% else %}cover{% endif %};
      background-position: center;
      background-repeat: {% if section.settings.backgorund_image_repeat %}repeat-x{% else %}no-repeat{% endif %};
    {% endif %}
  }
  {% if section.settings.backgorund_image_parallax == true %}
    @media screen and (min-width: 750px) {
      #shopify-section-{{ section.id }} {
          background-attachment: fixed;
      }
    }
  {% endif %}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div
  id="{{ section.settings.anchor }}"
  class="isolate{% unless section.settings.full_width %} page-width{% endunless %}"
>
  <div class="rich-section content-container {% if section.settings.full_width %} rich-section--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="rich-section__wrapper {% if section.settings.full_width %} page-width{% endif %}">
          <div
            class="rich-section__blocks--space-around direction_column_on_mobile reverse_direction_on_mobile"
            style="width:100%"
          >
            <div style="display:block" class="take-20_100_on_mobile"></div>
            <div style="display:flex; flex-direction:column;">
              <h3 class="{{ section.settings.subtitle_size }} custom-method-sub-title">
                {{ section.settings.subtitle }}
              </h3>
              <h2 class="{{ section.settings.title_size }} custom-method-title">
                {{ section.settings.title }}
              </h2>
              <h3
                class="{{ section.settings.subtitle2_size }} custom-red-label"
              >
                {{ section.settings.subtitle2 }}
              </h3>
            </div>
            <div style="display:block" class="take-20_100_on_mobile">
              <img src="{{ section.settings.featured_image | img_url: 'master' }}" style="max-width: 120px;">
            </div>
          </div>
          <div class="rich-section__blocks center custom-button-layout" style="margin: 0 auto;">
            <div class="rich-section__flex_even">
              <div style="display:flex; align-items:center">
                <div style="text-align:left;flex:1;">
                  <img src="{{ section.settings.caption_title_image1 | img_url: 'master' }}" style="width:100%">
                  <p class="annotation-custom">{{ section.settings.caption1 | newline_to_br }}</p>
                </div>
                <img
                  class="method-image"
                  src="{{ section.settings.caption_image1 | img_url: 'master' }}"
                >
              </div>
              <div style="display:flex; align-items:center">
                <img
                  class="method-image"
                  src="{{ section.settings.caption_image2 | img_url: 'master' }}"
                >
                <div style="text-align:left;flex:1">
                  <img
                    src="{{ section.settings.caption_title_image2 | img_url: 'master' }}"
                    style="width:100%;"
                  >
                  <p class="annotation-custom">{{ section.settings.caption2 | newline_to_br }}</p>
                </div>
              </div>
            </div>
            <a
              class="custom-Button {% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
              href="{{ section.settings.button_link1 }}"
              {% if section.settings.outer_link == true %}target="_blank" rel="noopener noreferrer"{% endif %}
              >{{section.settings.all_btn}}<span class="icon-wrap">{% render 'icon-arrow' %}</span></a
            >
          </div>
    </div>
  </div>
</div>

<style>
@media screen and (min-width: 990px) {
  #shopify-section-{{ section.id }} .rich-section__blocks {
      max-width: 1000px;
      padding-right: 20px;
      padding-left: 20px;
  }
}

#shopify-section-{{ section.id }} .rich-section__flex_even {
  padding-top: 30px;
  padding-bottom: 10px;
}


#shopify-section-{{ section.id }} .custom-method-title {
  font-size: 60px;
  margin: 0px;
  margin-bottom: 8px;
  text-align: center;
  letter-spacing: 5px;
}
#shopify-section-{{ section.id }} .custom-method-sub-title {
  font-size: 18px;
  font-weight: 500;
  margin: 0px;
  margin-bottom: 5px;
  text-align: center;
}
@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .custom-method-title {
    font-size: 40px;
  }
  #shopify-section-{{ section.id }} .custom-method-sub-title {
    font-size: 16px;
  }
}
#shopify-section-{{ section.id }} .custom-red-label {
  color: #fff;
  display: block;
  background-color: #c5241a;
  padding: 5px 15px;
  text-align: center;
  margin: 0px auto;
  text-wrap: nowrap;
  font-size: 22px;
}
@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .custom-red-label {
    font-size: 20px;
  }
}
#shopify-section-{{ section.id }} .annotation-custom {
  font-size: 14px;
  margin: 0;
  font-weight: bold;
  color: #333;
}

#shopify-section-{{ section.id }} .method-image {
  margin-right: 20px;
  margin-left: 20px;
  width: 150px;
  height: 150px;
}
@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .method-image {
    margin-right: 10px;
    margin-left: 10px;
    width: 100px;
    height: 100px;
  }
}

#shopify-section-{{ section.id }} .custom-Button {
  background: transparent;
  border: 1px solid #333;
  transition: all 0.2s;
}
#shopify-section-{{ section.id }} .custom-Button::after {
  box-shadow: 0 0 0 0 #fff;
}
#shopify-section-{{ section.id }} .custom-Button:hover {
  transform: rotate(0deg);
  border: 2px solid #333;
  transition: all 0.2s;
}
#shopify-section-{{ section.id }} .custom-Button:hover .icon-wrap {
  transform: scale(1.1);
}

</style>

