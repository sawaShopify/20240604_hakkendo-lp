      "label": "キャプション2"
    },
    {
      "type": "image_picker",
      "id": "images1",
      "label": "画像1"
    },
    {
      "type": "image_picker",
      "id": "images2",
      "label": "画像2"
    },
    {
      "type": "image_picker",
      "id": "images3",
      "label": "画像3"
    },
    {
      "type": "image_picker",
      "id": "images4",
      "label": "画像4"
    },
    {
      "type": "image_picker",
      "id": "images5",
      "label": "画像5"
    },
    {
      "type": "image_picker",
      "id": "images6",
