    {
      "type": "inline_richtext",
      "id": "subtitle",
      "default": "サブタイトル",
      "label": "サブタイトル"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "options": [
        {
          "value": "h3",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "文字サイズ"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle2",
      "default": "サブタイトル2",
      "label": "サブタイトル2 パターン２のみ"
    },
    {
      "type": "select",
      "id": "caption_size",
