    {
      "type": "image_picker",
      "id": "caption_title_image2",
      "label": "キャプションタイトル画像2"
    },
    {
      "type": "url",
      "id": "caption_link2",
      "label": "キャプションリンク2"
    },
    {
      "type": "text",
      "id": "caption_title2",
      "default": "キャプションタイトル2",
      "label": "キャプションタイトル2"
    },
    {
      "type": "textarea",
      "id": "caption2",
